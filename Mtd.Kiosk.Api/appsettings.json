{
  "Cors": {
    "AllowedOrigins": "https://kiosk.mtd.dev",
    "PolicyName": "Dashboard"
  },
  "AllowedHosts": "*",
  "ApiAuthentication": {
    "ApiKeys": [] // "<FROM_SECRETS/ENVIRONMENT>"
  },
  "ApiConfiguration": {
    "WarningHeartbeatThresholdMinutes": 5,
    "CriticalHeartbeatThresholdMinutes": 10
  },
  "ConnectionStrings": {
    "KioskConnection": "<FROM_SECRETS/ENVIRONMENT>",
    "StopwatchConnection": "<FROM_SECRETS/ENVIRONMENT>"
  },
  "RealTimeClientConfig": {
    "BaseUrl": "https://realtime.mtd.org",
    "GmEndpoint": "/gm",
    "SmEndpoint": "/sm/stops"
  },
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentUserName",
      "WithProcessId",
      "WithThreadId",
      "WithAssemblyName",
      "WithAssemblyVersion"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.EventLog",
      "Serilog.Sinks.Seq",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Context"
    ],
    "WriteTo": [
      {
        "Args": {
          "ServerUrl": "<FROM_SECRETS/ENVIRONMENT>",
          "ApiKey": "<FROM_SECRETS/ENVIRONMENT>"
        },
        "Name": "Seq"
      },
      {
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        },
        "Name": "Console"
      },
      {
        "Name": "EventLog",
        "Args": {
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\KioskApi\\log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}
